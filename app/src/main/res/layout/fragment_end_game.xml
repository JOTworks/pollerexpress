<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_end_game"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thePollerExpress.views.MainActivity"
    android:background="@color/PollerBackground"
    android:orientation="vertical">


    <TextView
        android:id="@+id/winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/PollerWhite"
        android:textSize="50dp"
        android:text="Winner"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/PollerWhite"
            android:textSize="40dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/PollerWhite"
            android:textSize="40dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gained from DC"
            android:textColor="@color/PollerWhite"
            android:textSize="40dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost from DC"
            android:textColor="@color/PollerWhite"
            android:textSize="40dp"
            android:padding="10dp"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/end_game_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="5dp"
            android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/find_new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="@string/find_new_game_button_text"
        android:background="@color/PollerWhite"
        android:padding="6dp"
        android:layout_gravity="center"
        />

</LinearLayout>

