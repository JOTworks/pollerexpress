<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="Views.MainActivity"
    android:background="@color/PollerBackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PollerBackground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/PollerWhite"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:text="@string/game_name_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/PollerWhite"
            android:textSize="30dp"
            android:paddingLeft="200dp"
            android:paddingRight="100dp"
            android:text="@string/in_game_text" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/game_selection_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/create_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="40sp"
        style="@style/PollerTheme"
        android:text="@string/create_game_button_text" />

</LinearLayout>

