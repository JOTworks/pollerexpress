<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:gravity="center"
                                             tools:context="Views.MainActivity"
                                             android:background="@color/PollerBackground"
                                             android:orientation="vertical">




    <android.support.v7.widget.RecyclerView
        android:id="@+id/game_selection_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/create_game_button"/>

    <Button
        android:id="@+id/create_game_button"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:textSize="40sp"
        style="@style/PollerTheme"
        android:text="@string/create_game_button_text" />

</RelativeLayout>

